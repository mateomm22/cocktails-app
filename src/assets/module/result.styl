.cocktail-item
  position relative
  cursor pointer
  overflow hidden
  &:after
    content ''
    display block
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-color $main
    opacity 0.8
    transition all .2s ease-out
  img
    display block
    position relative
    width 100%
    object-fit cover
    filter blur(5px)
    transition all .2s ease-out
  .text
    position absolute
    width 100%
    left 0
    bottom 0
    padding 15px 10px
    &:before
      @extends .cocktail-item:after
      opacity 0
      z-index 0
    h2,
    span
      position relative
      z-index 1
      color $secondary
    h2
      setFont('source', 700)
      font-size 1.1em
      margin-bottom 0
    span
      font-size .8em
      font-weight 500
  &:hover
    img
      filter blur(0)
    &:after
      opacity 0
    .text:before
        opacity 1
  &.mockup
    .image
      width 100%
      &:before
        display block
        width 100%
        padding-bottom 100%
    .text
      h2,
      span
        display inline-block
        height 5px
        background-color rgba(black, .2)
        border-radius 5px
