.categories
  h1
    margin-top 40px

.cat-group
  margin-top 40px
  h4
    margin-bottom 20px
  .cat-item
    align-items center
    background-color $light
    display flex
    justify-content center
    padding 10% 15%
    text-align center
    &:after
      content ''
      display block
      padding-bottom 30%
    h3
      color $text
      font-size 1.1em
      set-font('source', 700)
